Var
// Seção de Declarações das variáveis 
       salario, aumento, resultado: real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
       salario <- 0
       aumento <- 0
       resultado <- 0
       
       escreva ("Digite o valor do salario: ")
       leia (salario)
       
       aumento <- (salario * 30)/100
       
       resultado <- (salario + aumento)
       
       escreva ("Seu aumento de salario será para: ", resultado)

Fimalgoritmo
